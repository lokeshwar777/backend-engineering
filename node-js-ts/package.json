{
	"name": "backend-service",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "dotenvx run -- tsx src/server.ts",
		"dev:watch": "dotenvx run -- tsx watch src/server.ts",
		"dev:debug": "tsx watch --inspect --env-file=.env src/server.ts",
		"build": "tsc",
		"docker:up": "docker compose -f docker/docker-compose.dev.yml up --build",
		"docker:down": "docker compose -f docker/docker-compose.dev.yml down --remove-orphans --volumes",
		"start": "dotenvx run -- node dist/server.js",
		"docker:prod:up": "docker compose -f docker-compose.prod.yml up --build -d",
		"docker:prod:down": "docker compose -f docker-compose.prod.yml down --remove-orphans --volumes",
		"format": "prettier --write .",
		"lint": "eslint --ext .ts",
		"lint:fix": "eslint --ext .ts --fix"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"type": "module",
	"devDependencies": {
		"@types/express": "^5.0.5",
		"@types/node": "^24.5.2",
		"eslint": "^9.39.1",
		"eslint-plugin-prettier": "^5.5.4",
		"jiti": "^2.6.1",
		"pino-pretty": "^13.1.2",
		"prettier": "^3.6.2",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.47.0"
	},
	"dependencies": {
		"@dotenvx/dotenvx": "^1.51.0",
		"express": "^5.1.0",
		"mongoose": "^8.18.2",
		"pino": "^10.1.0",
		"pino-http": "^11.0.0",
		"zod": "^4.1.12"
	}
}
